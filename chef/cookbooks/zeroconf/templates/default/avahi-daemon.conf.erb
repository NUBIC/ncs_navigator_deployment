[server]
<% unless @allowed_interfaces.empty? %>
allow-interfaces=<%= @allowed_interfaces.join(', ') %>
<% end %>
use-ipv4=yes
use-ipv6=no

[wide-area]
enable-wide-area=yes

[rlimits]
rlimit-core=0
rlimit-data=4194304
rlimit-fsize=0
rlimit-nofile=300
rlimit-stack=4194304
rlimit-nproc=3
