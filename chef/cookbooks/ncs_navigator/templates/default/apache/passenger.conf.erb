<VirtualHost <%= @host %>:443>
  SSLEngine on
  SSLCertificateFile <%= @ssl_certificate %>
  SSLCertificateKeyFile <%= @ssl_key %>

  ServerName <%= @host %>
  DocumentRoot <%= @app_root %>/public

  <Directory <%= @app_root %>/public>
    Allow from all
    Options -MultiViews
  </Directory>
</VirtualHost>

PassengerPreStart <%= @uri %>
