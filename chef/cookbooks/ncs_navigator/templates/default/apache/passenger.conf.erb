<VirtualHost *:443>
  SSLEngine on
  SSLCertificateFile <%= @ssl_certificate %>
  SSLCertificateKeyFile <%= @ssl_key %>

  ServerName <%= @host %>
  DocumentRoot <%= @app_root %>/current/public
  RailsEnv <%= @env %>
  SetEnv <%= @secret_token_env_var %> "<%= @secret_token %>"

  <Directory <%= @app_root %>/current/public>
    Allow from all
    Options -MultiViews
  </Directory>
</VirtualHost>

PassengerPreStart <%= @uri %>
